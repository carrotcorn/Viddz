@model Viddz.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer Name</th>
        </tr>
    </thead>
    @if (Model.Customers.Count == 0)
    {
        <tr class="info">
            <td></td>
            <td>No Customers</td>
        </tr>
    }
    else
    {
        int i = 0;
        foreach (var customer in Model.Customers)
        {
            i++;
            <tr class="info">
                <td>@i</td>
                <td>@customer.Name</td>
            </tr>
        }
    }

</table>
