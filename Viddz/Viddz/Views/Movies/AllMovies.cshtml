@model IEnumerable<Viddz.Models.Movie>
@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<button type="submit" class="btn btn-primary" >
    
    @Html.ActionLink( "New Movie", "New", "Movies", null)
</button>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    @if (Model == null)
    {
        <tr class="info">
            <td></td>
            <td>No Movies</td>
        </tr>
    }
    else
    {
      
        foreach (var movie in Model)
        {
       
            <tr class="info">
                <td>
                    @Html.ActionLink(movie.Name, "MovieInfo", "Movies", new { id = movie.Id }, null)
                </td>
                <td>
                    @movie.Genre.GenreType
                </td>
            </tr>
        }
    }

</table>